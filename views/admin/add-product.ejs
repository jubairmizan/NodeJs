        <form class="product-form" action="/admin/add-product" method="POST">
            <div class="form-group">
              <label for="Title">Title</label>
              <input type="text" name="title" id="title" class="form-control" aria-describedby="title-product" placeholder="Enter Product Title">
              <small id="title-product" class="form-text text-muted">Product Title </small>
